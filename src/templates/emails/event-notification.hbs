    <![endif]-->
    <style>
        /* Reset and base styles */
        * {
            margin: 0 !important;
            padding: 0 !important;
            box-sizing: border-box !important;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif !important;
            background: #000000 !important;
            margin: 0 !important;
            padding: 10px !important;
            min-height: 100vh !important;
            -webkit-text-size-adjust: 100% !important;
            -ms-text-size-adjust: 100% !important;
        }
        
        /* Mobile-first container */
        .email-container {
            max-width: 600px !important;
            margin: 0 auto !important;
            background: #ffffff !important;
            border-radius: 12px !important;
            overflow: hidden !important;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3) !important;
        }
        
        /* Header optimized for mobile */
        .header {
            background: linear-gradient(135deg, #000000 0%, #333333 100%) !important;
            padding: 30px 20px !important;
            text-align: center !important;
            color: white !important;
        }
        
        .logo {
            width: 50px !important;
            height: 50px !important;
            background: rgba(255, 255, 255, 0.15) !important;
            border-radius: 8px !important;
            margin: 0 auto 16px !important;
            display: flex !important;
            align-items: center !important;
            justify-content: center !important;
            border: 1px solid rgba(255, 255, 255, 0.2) !important;
        }
        
        .logo img {
            width: 26px !important;
            height: 26px !important;
            object-fit: contain !important;
        }
        
        .header h1 {
            font-size: 22px !important;
            font-weight: 700 !important;
            margin-bottom: 6px !important;
            line-height: 1.2 !important;
        }
        
        .header p {
            font-size: 14px !important;
            opacity: 0.9 !important;
            font-weight: 400 !important;
        }
        
        /* Content with better mobile spacing */
        .content {
            padding: 30px 20px !important;
        }
        
        .event-section {
            text-align: center !important;
            margin-bottom: 30px !important;
        }
        
        .event-title {
            font-size: 20px !important;
            font-weight: 600 !important;
            color: #000000 !important;
            margin-bottom: 10px !important;
            line-height: 1.3 !important;
        }
        
        .greeting {
            font-size: 16px !important;
            color: #333333 !important;
            margin-bottom: 16px !important;
            font-weight: 500 !important;
        }
        
        .event-description {
            font-size: 15px !important;
            color: #666666 !important;
            line-height: 1.6 !important;
            margin-bottom: 25px !important;
        }
        
        /* Simplified event card for mobile */
        .event-card {
            background: #f8f8f8 !important;
            border: 1px solid #d0d0d0 !important;
            border-radius: 12px !important;
            padding: 20px !important;
            margin: 25px 0 !important;
            text-align: left !important;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1) !important;
        }
        
        .event-header {
            display: table !important;
            width: 100% !important;
            margin-bottom: 20px !important;
        }
        
        .event-icon {
            display: table-cell !important;
            width: 50px !important;
            height: 50px !important;
            background: linear-gradient(135deg, #000000 0%, #333333 100%) !important;
            border-radius: 10px !important;
            text-align: center !important;
            vertical-align: middle !important;
            font-size: 20px !important;
            color: white !important;
        }
        
        .event-info {
            display: table-cell !important;
            vertical-align: middle !important;
            padding-left: 15px !important;
        }
        
        .event-name {
            font-size: 18px !important;
            font-weight: 600 !important;
            color: #000000 !important;
            margin-bottom: 6px !important;
            line-height: 1.3 !important;
            word-wrap: break-word !important;
        }
        
        .event-type {
            display: inline-block !important;
            background: linear-gradient(135deg, #000000 0%, #333333 100%) !important;
            color: white !important;
            padding: 4px 10px !important;
            border-radius: 12px !important;
            font-size: 11px !important;
            font-weight: 500 !important;
            text-transform: uppercase !important;
            letter-spacing: 0.5px !important;
            margin-bottom: 10px !important;
        }
        
        /* Mobile-optimized event details grid */
        .event-details {
            display: block !important;
            margin: 20px 0 !important;
        }
        
        .detail-item {
            background: #ffffff !important;
            border-radius: 8px !important;
            padding: 12px !important;
            border: 1px solid #e0e0e0 !important;
            margin-bottom: 10px !important;
        }
        
        .detail-item:last-child {
            margin-bottom: 0 !important;
        }
        
        .detail-icon {
            font-size: 14px !important;
            margin-bottom: 6px !important;
        }
        
        .detail-label {
            font-size: 11px !important;
            color: #666666 !important;
            font-weight: 600 !important;
            margin-bottom: 3px !important;
            text-transform: uppercase !important;
            letter-spacing: 0.5px !important;
        }
        
        .detail-value {
            font-size: 13px !important;
            color: #000000 !important;
            font-weight: 600 !important;
            line-height: 1.4 !important;
            word-wrap: break-word !important;
        }
        
        /* Action buttons */
        .action-buttons {
            text-align: center !important;
            margin: 25px 0 !important;
        }
        
        .action-button {
            display: inline-block !important;
            background: linear-gradient(135deg, #000000 0%, #333333 100%) !important;
            color: white !important;
            text-decoration: none !important;
            padding: 12px 20px !important;
            border-radius: 8px !important;
            font-weight: 500 !important;
            margin: 5px !important;
            font-size: 14px !important;
        }
        
        .action-button.secondary {
            background: #f8f8f8 !important;
            color: #333333 !important;
            border: 1px solid #d0d0d0 !important;
        }
        
        /* Footer */
        .footer {
            background: #f8f8f8 !important;
            padding: 25px 20px !important;
            text-align: center !important;
            border-top: 1px solid #e0e0e0 !important;
        }
        
        .support-link {
            display: inline-flex !important;
            align-items: center !important;
            gap: 6px !important;
            background: linear-gradient(135deg, #000000 0%, #333333 100%) !important;
            color: white !important;
            text-decoration: none !important;
            padding: 10px 16px !important;
            border-radius: 8px !important;
            font-weight: 500 !important;
            margin-bottom: 12px !important;
            font-size: 13px !important;
        }
        
        .footer-text {
            font-size: 12px !important;
            color: #666666 !important;
            line-height: 1.5 !important;
        }
        
        /* Enhanced mobile styles */
        @media only screen and (max-width: 480px) {
            body {
                padding: 5px !important;
            }
            
            .email-container {
                border-radius: 8px !important;
            }
            
            .header {
                padding: 25px 15px !important;
            }
            
            .content {
                padding: 25px 15px !important;
            }
            
            .header h1 {
                font-size: 20px !important;
            }
            
            .event-title {
                font-size: 18px !important;
            }
            
            .greeting {
                font-size: 15px !important;
            }
            
            .event-description {
                font-size: 14px !important;
            }
            
            .logo {
                width: 35px !important;
                height: 35px !important;
            }
            
            .logo img {
                width: 18px !important;
                height: 18px !important;
            }
            
            .event-card {
                padding: 15px !important;
                margin: 20px 0 !important;
            }
            
            .event-header {
                margin-bottom: 15px !important;
            }
            
            .event-icon {
                width: 45px !important;
                height: 45px !important;
                font-size: 18px !important;
            }
            
            .event-info {
                padding-left: 12px !important;
            }
            
            .event-name {
                font-size: 16px !important;
            }
            
            .detail-item {
                padding: 10px !important;
                margin-bottom: 8px !important;
            }
            
            .action-button {
                padding: 10px 16px !important;
                font-size: 13px !important;
                margin: 3px !important;
                display: block !important;
                margin-bottom: 8px !important;
            }
            
            .footer {
                padding: 20px 15px !important;
            }
        }
        
        /* Extra small screens */
        @media only screen and (max-width: 320px) {
            .content {
                padding: 20px 12px !important;
            }
            
            .logo {
                width: 30px !important;
                height: 30px !important;
            }
            
            .logo img {
                width: 16px !important;
                height: 16px !important;
            }
            
            .event-card {
                padding: 12px !important;
            }
            
            .event-header {
                display: block !important;
                text-align: center !important;
            }
            
            .event-icon {
                display: inline-block !important;
                width: 40px !important;
                height: 40px !important;
                font-size: 16px !important;
                margin-bottom: 10px !important;
            }
            
            .event-info {
                display: block !important;
                padding-left: 0 !important;
            }
            
            .event-name {
                font-size: 15px !important;
            }
            
            .detail-item {
                padding: 8px !important;
            }
        }
    </style>
</head>
<body style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif; background: #000000; margin: 0; padding: 10px; min-height: 100vh; -webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%;">
    <div class="email-container" style="max-width: 600px; margin: 0 auto; background: #ffffff; border-radius: 12px; overflow: hidden; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);">
        <div class="header" style="background: linear-gradient(135deg, #000000 0%, #333333 100%); padding: 30px 20px; text-align: center; color: white;">
            <div class="logo" style="width: 50px; height: 50px; background: rgba(255, 255, 255, 0.15); border-radius: 8px; margin: 0 auto 16px; display: flex; align-items: center; justify-content: center; border: 1px solid rgba(255, 255, 255, 0.2);">
                <img src="cid:company-logo" alt="MyProfile Logo" style="width: 40px; height: 40px; object-fit: contain;">
            </div>
            <h1 style="font-size: 22px; font-weight: 700; margin-bottom: 6px; line-height: 1.2; color: white;">Event Notification</h1>
            <p style="font-size: 14px; opacity: 0.9; font-weight: 400; color: white;">Stay updated with your events</p>
        </div>
        
        <div class="content" style="padding: 30px 20px;">
            <div class="event-section" style="text-align: center; margin-bottom: 30px;">
                <h2 class="event-title" style="font-size: 20px; font-weight: 600; color: #000000; margin-bottom: 10px; line-height: 1.3;">{{title}}</h2>
                {{#if greeting}}
                <p class="greeting" style="font-size: 16px; color: #333333; margin-bottom: 16px; font-weight: 500;">{{greeting}}</p>
                {{/if}}
                {{#if description}}
                <p class="event-description" style="font-size: 15px; color: #666666; line-height: 1.6; margin-bottom: 25px;">{{description}}</p>
                {{/if}}
            </div>
            
            {{#if event}}
            <div class="event-card" style="background: #f8f8f8; border: 1px solid #d0d0d0; border-radius: 12px; padding: 20px; margin: 25px 0; text-align: left; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);">
                <table class="event-header" style="display: table; width: 100%; margin-bottom: 20px;" cellpadding="0" cellspacing="0" border="0">
                    <tr>
                        <td class="event-icon" style="display: table-cell; width: 50px; height: 50px; background: linear-gradient(135deg, #000000 0%, #333333 100%); border-radius: 10px; text-align: center; vertical-align: middle; font-size: 20px; color: white;">
                            {{#if event.icon}}{{event.icon}}{{else}}📅{{/if}}
                        </td>
                        <td class="event-info" style="display: table-cell; vertical-align: middle; padding-left: 15px;">
                            <h3 class="event-name" style="font-size: 18px; font-weight: 600; color: #000000; margin-bottom: 6px; line-height: 1.3; word-wrap: break-word;">{{event.name}}</h3>
                            {{#if event.type}}
                            <div class="event-type" style="display: inline-block; background: linear-gradient(135deg, #000000 0%, #333333 100%); color: white; padding: 4px 10px; border-radius: 12px; font-size: 11px; font-weight: 500; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 10px;">{{event.type}}</div>
                            {{/if}}
                        </td>
                    </tr>
                </table>
                
                <div class="event-details" style="display: block; margin: 20px 0;">
                    {{#if event.startTime}}
                    <div class="detail-item" style="background: #ffffff; border-radius: 8px; padding: 12px; border: 1px solid #e0e0e0; margin-bottom: 10px;">
                        <div class="detail-icon" style="font-size: 14px; margin-bottom: 6px;">🕒</div>
                        <div class="detail-label" style="font-size: 11px; color: #666666; font-weight: 600; margin-bottom: 3px; text-transform: uppercase; letter-spacing: 0.5px;">Start Time</div>
                        <div class="detail-value" style="font-size: 13px; color: #000000; font-weight: 600; line-height: 1.4; word-wrap: break-word;">{{event.startTime}}</div>
                    </div>
                    {{/if}}
                    
                    {{#if event.endTime}}
                    <div class="detail-item" style="background: #ffffff; border-radius: 8px; padding: 12px; border: 1px solid #e0e0e0; margin-bottom: 10px;">
                        <div class="detail-icon" style="font-size: 14px; margin-bottom: 6px;">⏰</div>
                        <div class="detail-label" style="font-size: 11px; color: #666666; font-weight: 600; margin-bottom: 3px; text-transform: uppercase; letter-spacing: 0.5px;">End Time</div>
                        <div class="detail-value" style="font-size: 13px; color: #000000; font-weight: 600; line-height: 1.4; word-wrap: break-word;">{{event.endTime}}</div>
                    </div>
                    {{/if}}
                    
                    {{#if event.location}}
                    <div class="detail-item" style="background: #ffffff; border-radius: 8px; padding: 12px; border: 1px solid #e0e0e0; margin-bottom: 10px;">
                        <div class="detail-icon" style="font-size: 14px; margin-bottom: 6px;">📍</div>
                        <div class="detail-label" style="font-size: 11px; color: #666666; font-weight: 600; margin-bottom: 3px; text-transform: uppercase; letter-spacing: 0.5px;">Location</div>
                        <div class="detail-value" style="font-size: 13px; color: #000000; font-weight: 600; line-height: 1.4; word-wrap: break-word;">{{event.location}}</div>
                    </div>
                    {{/if}}
                    
                    {{#if event.duration}}
                    <div class="detail-item" style="background: #ffffff; border-radius: 8px; padding: 12px; border: 1px solid #e0e0e0; margin-bottom: 10px;">
                        <div class="detail-icon" style="font-size: 14px; margin-bottom: 6px;">⏱️</div>
                        <div class="detail-label" style="font-size: 11px; color: #666666; font-weight: 600; margin-bottom: 3px; text-transform: uppercase; letter-spacing: 0.5px;">Duration</div>
                        <div class="detail-value" style="font-size: 13px; color: #000000; font-weight: 600; line-height: 1.4; word-wrap: break-word;">{{event.duration}} minutes</div>
                    </div>
                    {{/if}}
                    
                    {{#if event.description}}
                    <div class="detail-item" style="background: #ffffff; border-radius: 8px; padding: 12px; border: 1px solid #e0e0e0; margin-bottom: 10px;">
                        <div class="detail-icon" style="font-size: 14px; margin-bottom: 6px;">📝</div>
                        <div class="detail-label" style="font-size: 11px; color: #666666; font-weight: 600; margin-bottom: 3px; text-transform: uppercase; letter-spacing: 0.5px;">Description</div>
                        <div class="detail-value" style="font-size: 13px; color: #000000; font-weight: 600; line-height: 1.4; word-wrap: break-word;">{{event.description}}</div>
                    </div>
                    {{/if}}
                    
                    {{#if event.status}}
                    <div class="detail-item" style="background: #ffffff; border-radius: 8px; padding: 12px; border: 1px solid #e0e0e0; margin-bottom: 10px;">
                        <div class="detail-icon" style="font-size: 14px; margin-bottom: 6px;">📊</div>
                        <div class="detail-label" style="font-size: 11px; color: #666666; font-weight: 600; margin-bottom: 3px; text-transform: uppercase; letter-spacing: 0.5px;">Status</div>
                        <div class="detail-value" style="font-size: 13px; color: #000000; font-weight: 600; line-height: 1.4; word-wrap: break-word;">{{event.status}}</div>
                    </div>
                    {{/if}}
                    
                    {{#if event.organizer}}
                    <div class="detail-item" style="background: #ffffff; border-radius: 8px; padding: 12px; border: 1px solid #e0e0e0; margin-bottom: 10px;">
                        <div class="detail-icon" style="font-size: 14px; margin-bottom: 6px;">👤</div>
                        <div class="detail-label" style="font-size: 11px; color: #666666; font-weight: 600; margin-bottom: 3px; text-transform: uppercase; letter-spacing: 0.5px;">Requested By</div>
                        <div class="detail-value" style="font-size: 13px; color: #000000; font-weight: 600; line-height: 1.4; word-wrap: break-word;">{{event.organizer}}</div>
                    </div>
                    {{/if}}
                    
                    {{#if event.participants}}
                    <div class="detail-item" style="background: #ffffff; border-radius: 8px; padding: 12px; border: 1px solid #e0e0e0; margin-bottom: 0;">
                        <div class="detail-icon" style="font-size: 14px; margin-bottom: 6px;">👥</div>
                        <div class="detail-label" style="font-size: 11px; color: #666666; font-weight: 600; margin-bottom: 3px; text-transform: uppercase; letter-spacing: 0.5px;">Participants</div>
                        <div class="detail-value" style="font-size: 13px; color: #000000; font-weight: 600; line-height: 1.4; word-wrap: break-word;">{{event.participants}} people</div>
                    </div>
                    {{/if}}
                </div>
            </div>
            {{/if}}
            
            {{#if actions}}
            <div class="action-buttons" style="text-align: center; margin: 25px 0;">
                {{#each actions}}
                <a href="{{url}}" class="action-button {{#if secondary}}secondary{{/if}}" style="display: inline-block; background: linear-gradient(135deg, #000000 0%, #333333 100%); color: white; text-decoration: none; padding: 12px 20px; border-radius: 8px; font-weight: 500; margin: 5px; font-size: 14px;">{{text}}</a>
                {{/each}}
            </div>
            {{/if}}
        </div>
        
        <div class="footer" style="background: #f8f8f8; padding: 25px 20px; text-align: center; border-top: 1px solid #e0e0e0;">
            <a href="mailto:support@getmyprofile.online" class="support-link" style="display: inline-flex; align-items: center; gap: 6px; background: linear-gradient(135deg, #000000 0%, #333333 100%); color: white; text-decoration: none; padding: 10px 16px; border-radius: 8px; font-weight: 500; margin-bottom: 12px; font-size: 13px;">
                📧 Contact Support
            </a>
            <p class="footer-text" style="font-size: 12px; color: #666666; line-height: 1.5;">
                This is an automated message from MyProfile. Please do not reply to this email.<br>
                If you need assistance, please contact our support team.
            </p>
        </div>
    </div>
</body>
</html>