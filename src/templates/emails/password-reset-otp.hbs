      }
      
      .content {
        font-size: 13px !important;
      }
      
      .otp-container {
        padding: 15px !important;
      }
      
      .otp-code {
        font-size: 22px !important;
        letter-spacing: 3px !important;
        min-width: 130px !important;
      }
    }
  </style>
