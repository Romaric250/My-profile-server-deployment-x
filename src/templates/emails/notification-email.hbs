<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
  <style>
    body {
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      line-height: 1.6;
      color: #333;
      margin: 0;
      padding: 0;
      background-color: #f9f9f9;
    }
    .container {
      max-width: 600px;
      margin: 20px auto;
      padding: 30px;
      background-color: #ffffff;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }
    .header {
      text-align: center;
      padding: 0 0 20px 0;
      border-bottom: 1px solid #eee;
      margin-bottom: 25px;
    }
    .logo {
      max-width: 40px;
      height: auto;
      margin-bottom: 15px;
    }
    .title {
      font-size: 24px;
      color: #2c3e50;
      margin: 0;
      font-weight: 600;
    }
    .content {
      padding: 0;
      color: #4a5568;
      font-size: 16px;
    }
    .message {
      margin-bottom: 25px;
      line-height: 1.7;
    }
    .footer {
      text-align: center;
      padding: 25px 0 0 0;
      font-size: 13px;
      color: #718096;
      border-top: 1px solid #eee;
      margin-top: 30px;
    }
    .button {
      display: inline-block;
      padding: 12px 24px;
      background-color: #4299e1;
      color: #ffffff !important;
      text-decoration: none;
      border-radius: 6px;
      font-weight: 500;
      margin-top: 20px;
      transition: background-color 0.2s;
    }
    .button:hover {
      background-color: #3182ce;
    }
    
    /* Connection Request Styles */
    .connection-details {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border-radius: 12px;
      padding: 20px;
      margin: 20px 0;
      color: white;
    }
    .connection-type {
      display: inline-block;
      background-color: rgba(255, 255, 255, 0.2);
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 10px;
    }
    .connection-reason {
      font-size: 15px;
      margin: 10px 0;
      font-style: italic;
      opacity: 0.9;
    }
    .connection-source {
      font-size: 13px;
      opacity: 0.8;
      margin-top: 10px;
    }
    
    /* Event/Booking Styles */
    .event-details {
      background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
      border-radius: 12px;
      padding: 20px;
      margin: 20px 0;
      color: white;
    }
    .event-type {
      display: inline-block;
      background-color: rgba(255, 255, 255, 0.2);
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 10px;
    }
    .event-time {
      font-size: 15px;
      margin: 10px 0;
      font-weight: 500;
    }
    .event-location {
      font-size: 14px;
      opacity: 0.9;
      margin: 5px 0;
    }
    
    /* General Metadata Styles */
    .metadata {
      background-color: #f8fafc;
      border-radius: 8px;
      padding: 15px;
      margin: 20px 0;
      font-size: 14px;
      border-left: 4px solid #4299e1;
    }
    .metadata-item {
      margin: 8px 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .metadata-label {
      color: #718096;
      font-weight: 500;
      text-transform: capitalize;
    }
    .metadata-value {
      color: #2d3748;
      font-weight: 400;
    }
    
    /* Icons */
    .icon {
      display: inline-block;
      margin-right: 8px;
      font-size: 16px;
    }
    
    @media only screen and (max-width: 600px) {
      .container {
        margin: 10px;
        padding: 20px;
      }
      .title {
        font-size: 20px;
      }
      .content {
        font-size: 15px;
      }
      .metadata-item {
        flex-direction: column;
        align-items: flex-start;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <img src="cid:company-logo" alt="{{appName}}" class="logo">
      <h1 class="title">{{title}}</h1>
    </div>
    <div class="content">
      <div class="message">{{message}}</div>
      
      {{#if metadata}}
        {{#if metadata.connectionType}}
        <!-- Connection Request Details -->
        <div class="connection-details">
          <div class="connection-type">
            <span class="icon">ü§ù</span>
            {{#if (eq metadata.connectionType "connect")}}Connection Request{{/if}}
            {{#if (eq metadata.connectionType "follow")}}Follow Request{{/if}}
            {{#if (eq metadata.connectionType "business")}}Business Connection{{/if}}
            {{#if (eq metadata.connectionType "donation")}}Donation Request{{/if}}
          </div>
          
          {{#if metadata.connectionReason}}
          <div class="connection-reason">
            <span class="icon">üí¨</span>
            "{{metadata.connectionReason}}"
          </div>
          {{/if}}
          
          {{#if metadata.source}}
          <div class="connection-source">
            <span class="icon">
              {{#if (eq metadata.source "qrcode")}}üì±{{/if}}
              {{#if (eq metadata.source "link")}}üîó{{/if}}
              {{#if (eq metadata.source "direct")}}üë§{{/if}}
            </span>
            Connected via 
            {{#if (eq metadata.source "qrcode")}}QR Code{{/if}}
            {{#if (eq metadata.source "link")}}Shared Link{{/if}}
            {{#if (eq metadata.source "direct")}}Direct Request{{/if}}
          </div>
          {{/if}}
        </div>
        
        {{else if metadata.eventType}}
        <!-- Event/Booking Details -->
        <div class="event-details">
          <div class="event-type">
            <span class="icon">
              {{#if (eq metadata.eventType "booking")}}üìÖ{{/if}}
              {{#if (eq metadata.eventType "meeting")}}ü§ù{{/if}}
              {{#if (eq metadata.eventType "appointment")}}‚è∞{{/if}}
              {{#if (eq metadata.eventType "celebration")}}üéâ{{/if}}
            </span>
            {{metadata.eventType}}
          </div>
          
          {{#if metadata.startTime}}
          <div class="event-time">
            <span class="icon">üïê</span>
            {{metadata.startTime}}
          </div>
          {{/if}}
          
          {{#if metadata.location}}
          <div class="event-location">
            <span class="icon">üìç</span>
            {{metadata.location}}
          </div>
          {{/if}}
          
          {{#if metadata.duration}}
          <div class="event-location">
            <span class="icon">‚è±Ô∏è</span>
            Duration: {{metadata.duration}}
          </div>
          {{/if}}
        </div>
        
        {{else}}
        <!-- General Metadata -->
        <div class="metadata">
          {{#each metadata}}
            {{#unless (or (eq @key "connectionType") (eq @key "connectionReason") (eq @key "source") (eq @key "eventType"))}}
            <div class="metadata-item">
              <span class="metadata-label">{{@key}}:</span>
              <span class="metadata-value">{{this}}</span>
            </div>
            {{/unless}}
          {{/each}}
        </div>
        {{/if}}
      {{/if}}
      
      {{#if action.url}}
      <div style="text-align: center;">
        <a href="{{action.url}}" class="button">{{action.text}}</a>
      </div>
      {{/if}}
    </div>
    <div class="footer">
      <p>&copy; {{year}} {{appName}}. All rights reserved.</p>
      <p>This is an automated message, please do not reply to this email.</p>
    </div>
  </div>
</body>
</html>
