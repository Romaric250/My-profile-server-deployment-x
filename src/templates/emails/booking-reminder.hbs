  <![endif]-->
  <style>
    /* Reset and base styles */
    * {
      margin: 0 !important;
      padding: 0 !important;
      box-sizing: border-box !important;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif !important;
      line-height: 1.6 !important;
      color: #333 !important;
      margin: 0 !important;
      padding: 10px !important;
      background-color: #000000 !important;
      -webkit-text-size-adjust: 100% !important;
      -ms-text-size-adjust: 100% !important;
    }
    
    /* Mobile-first container */
    .container {
      max-width: 600px !important;
      margin: 0 auto !important;
      padding: 20px !important;
      background-color: #ffffff !important;
      border-radius: 12px !important;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3) !important;
    }
    
    /* Header */
    .header {
      text-align: center !important;
      padding: 0 0 20px 0 !important;
      border-bottom: 1px solid #eee !important;
      margin-bottom: 20px !important;
    }
    
    .logo {
      width: 50px !important;
      height: 50px !important;
      margin: 0 auto 12px !important;
      display: block !important;
    }
    
    .title {
      font-size: 20px !important;
      color: #000000 !important;
      margin: 0 !important;
      font-weight: 600 !important;
      line-height: 1.3 !important;
    }
    
    .subtitle {
      font-size: 14px !important;
      color: #718096 !important;
      margin: 8px 0 0 0 !important;
      font-weight: 400 !important;
    }
    
    /* Content */
    .content {
      padding: 0 !important;
      color: #4a5568 !important;
      font-size: 15px !important;
    }
    
    .greeting {
      font-size: 16px !important;
      color: #2d3748 !important;
      margin-bottom: 20px !important;
      font-weight: 500 !important;
    }
    
    /* Reminder section */
    .reminder-section {
      text-align: center !important;
      margin-bottom: 25px !important;
    }
    
    .reminder-icon {
      width: 60px !important;
      height: 60px !important;
      background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%) !important;
      border-radius: 50% !important;
      margin: 0 auto 15px !important;
      display: flex !important;
      align-items: center !important;
      justify-content: center !important;
      box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3) !important;
    }
    
    .reminder-icon svg {
      width: 30px !important;
      height: 30px !important;
      fill: #ffffff !important;
    }
    
    .reminder-title {
      font-size: 22px !important;
      font-weight: 600 !important;
      color: #000000 !important;
      margin-bottom: 12px !important;
    }
    
    /* Booking details */
    .booking-details {
      background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%) !important;
      border-radius: 12px !important;
      padding: 20px !important;
      margin: 25px 0 !important;
      border-left: 3px solid #000000 !important;
    }
    
    .booking-details h3 {
      font-size: 16px !important;
      font-weight: 600 !important;
      color: #000000 !important;
      margin-bottom: 15px !important;
    }
    
    .detail-row {
      display: flex !important;
      justify-content: space-between !important;
      align-items: center !important;
      padding: 12px 0 !important;
      border-bottom: 1px solid #e2e8f0 !important;
    }
    
    .detail-row:last-child {
      border-bottom: none !important;
      padding-bottom: 0 !important;
    }
    
    .detail-label {
      font-weight: 500 !important;
      color: #718096 !important;
      font-size: 14px !important;
    }
    
    .detail-value {
      text-align: right !important;
      font-weight: 600 !important;
      color: #2d3748 !important;
      font-size: 14px !important;
    }
    
    /* Time highlight */
    .time-highlight {
      background: linear-gradient(135deg, #fef7f7 0%, #fee2e2 100%) !important;
      border-left: 4px solid #dc2626 !important;
      border-radius: 8px !important;
      padding: 15px !important;
      margin: 20px 0 !important;
      text-align: center !important;
    }
    
    .time-highlight .time {
      font-size: 18px !important;
      font-weight: 600 !important;
      color: #dc2626 !important;
      margin-bottom: 5px !important;
    }
    
    .time-highlight .date {
      font-size: 14px !important;
      color: #4a5568 !important;
    }
    
    /* Service provider */
    .provider-section {
      background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%) !important;
      border-left: 3px solid #3b82f6 !important;
      border-radius: 8px !important;
      padding: 15px !important;
      margin: 20px 0 !important;
      color: #4a5568 !important;
      line-height: 1.6 !important;
    }
    
    .provider-title {
      font-size: 16px !important;
      font-weight: 600 !important;
      color: #000000 !important;
      margin-bottom: 10px !important;
    }
    
    /* Buttons */
    .button-container {
      text-align: center !important;
      margin: 25px 0 !important;
    }
    
    .button-group {
      display: flex !important;
      gap: 15px !important;
      justify-content: center !important;
      flex-wrap: wrap !important;
    }
    
    .button {
      display: inline-block !important;
      padding: 12px 24px !important;
      text-decoration: none !important;
      border-radius: 8px !important;
      font-weight: 600 !important;
      font-size: 14px !important;
      min-width: 120px !important;
      text-align: center !important;
    }
    
    .button-primary {
      background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%) !important;
      color: #ffffff !important;
      box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3) !important;
    }
    
    .button-secondary {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%) !important;
      color: #ffffff !important;
      box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3) !important;
    }
    
    .button-cancel {
      background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%) !important;
      color: #ffffff !important;
      box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3) !important;
    }
    
    /* Notes section */
    .notes-section {
      background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%) !important;
      border-left: 3px solid #f59e0b !important;
      border-radius: 8px !important;
      padding: 15px !important;
      margin: 20px 0 !important;
      color: #4a5568 !important;
      line-height: 1.6 !important;
    }
    
    .notes-title {
      font-size: 16px !important;
      font-weight: 600 !important;
      color: #000000 !important;
      margin-bottom: 10px !important;
    }
    
    /* Footer */
    .footer {
      text-align: center !important;
      padding: 20px 0 0 0 !important;
      font-size: 12px !important;
      color: #718096 !important;
      border-top: 1px solid #eee !important;
      margin-top: 25px !important;
    }
    
    /* Mobile optimizations */
    @media only screen and (max-width: 480px) {
      body {
        padding: 5px !important;
      }
      
      .container {
        margin: 0 !important;
        padding: 15px !important;
        border-radius: 8px !important;
      }
      
      .logo {
        width: 35px !important;
        height: 35px !important;
      }
      
      .title {
        font-size: 18px !important;
      }
      
      .content {
        font-size: 14px !important;
      }
      
      .reminder-title {
        font-size: 20px !important;
      }
      
      .booking-details {
        padding: 15px !important;
        margin: 20px 0 !important;
      }
      
      .detail-row {
        flex-direction: column !important;
        align-items: flex-start !important;
        gap: 4px !important;
      }
      
      .detail-value {
        text-align: left !important;
      }
      
      .button-group {
        flex-direction: column !important;
        gap: 10px !important;
      }
      
      .button {
        padding: 10px 20px !important;
        font-size: 13px !important;
        min-width: auto !important;
        width: 100% !important;
      }
      
      .time-highlight,
      .provider-section,
      .notes-section {
        padding: 12px !important;
        margin: 15px 0 !important;
      }
      
      .footer {
        padding: 15px 0 0 0 !important;
        margin-top: 20px !important;
      }
    }
    
    /* Extra small screens */
    @media only screen and (max-width: 320px) {
      .container {
        padding: 12px !important;
      }
      
      .logo {
        width: 30px !important;
        height: 30px !important;
      }
      
      .title {
        font-size: 16px !important;
      }
      
      .content {
        font-size: 13px !important;
      }
      
      .booking-details {
        padding: 12px !important;
      }
    }
  </style>
</head>
<body style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif; line-height: 1.6; color: #333; margin: 0; padding: 10px; background-color: #000000; -webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%;">
  <div class="container" style="max-width: 600px; margin: 0 auto; padding: 20px; background-color: #ffffff; border-radius: 12px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);">
    <div class="header" style="text-align: center; padding: 0 0 20px 0; border-bottom: 1px solid #eee; margin-bottom: 20px;">
      <img src="cid:company-logo" alt="{{appName}}" class="logo" style="width: 50px; height: 50px; margin: 0 auto 12px; display: block;">
      <h1 class="title" style="font-size: 20px; color: #000000; margin: 0; font-weight: 600; line-height: 1.3;">Booking Reminder</h1>
      <p class="subtitle" style="font-size: 14px; color: #718096; margin: 8px 0 0 0; font-weight: 400;">Upcoming Appointment</p>
    </div>
    
    <div class="content" style="padding: 0; color: #4a5568; font-size: 15px;">
      <div class="reminder-section" style="text-align: center; margin-bottom: 25px;">
        <div class="reminder-icon" style="width: 60px; height: 60px; background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); border-radius: 50%; margin: 0 auto 15px; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: 30px; height: 30px; fill: #ffffff;">
            <path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"/>
          </svg>
        </div>
        <h2 class="reminder-title" style="font-size: 22px; font-weight: 600; color: #000000; margin-bottom: 12px;">{{title}}</h2>
      </div>
      
      <p class="greeting" style="font-size: 16px; color: #2d3748; margin-bottom: 20px; font-weight: 500;">
        Hello {{recipientName}},
      </p>
      
      <p style="margin-bottom: 20px; line-height: 1.6;">
        This is a friendly reminder about your upcoming booking:
      </p>
      
      <div class="time-highlight" style="background: linear-gradient(135deg, #fef7f7 0%, #fee2e2 100%); border-left: 4px solid #dc2626; border-radius: 8px; padding: 15px; margin: 20px 0; text-align: center;">
        <div class="time" style="font-size: 18px; font-weight: 600; color: #dc2626; margin-bottom: 5px;">{{formatTime startTime}}</div>
        <div class="date" style="font-size: 14px; color: #4a5568;">{{formatDate startTime}}</div>
      </div>
      
      <div class="booking-details" style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); border-radius: 12px; padding: 20px; margin: 25px 0; border-left: 3px solid #000000;">
        <h3 style="font-size: 16px; font-weight: 600; color: #000000; margin-bottom: 15px;">Booking Details</h3>
        
        <div class="detail-row" style="display: flex; justify-content: space-between; align-items: center; padding: 12px 0; border-bottom: 1px solid #e2e8f0;">
          <span class="detail-label" style="font-weight: 500; color: #718096; font-size: 14px;">Service:</span>
          <span class="detail-value" style="text-align: right; font-weight: 600; color: #2d3748; font-size: 14px;">{{service}}</span>
        </div>
        
        {{#if duration}}
        <div class="detail-row" style="display: flex; justify-content: space-between; align-items: center; padding: 12px 0; border-bottom: 1px solid #e2e8f0;">
          <span class="detail-label" style="font-weight: 500; color: #718096; font-size: 14px;">Duration:</span>
          <span class="detail-value" style="text-align: right; font-weight: 600; color: #2d3748; font-size: 14px;">{{duration}} minutes</span>
        </div>
        {{/if}}
        
        {{#if location}}
        <div class="detail-row" style="display: flex; justify-content: space-between; align-items: center; padding: 12px 0; border-bottom: 1px solid #e2e8f0;">
          <span class="detail-label" style="font-weight: 500; color: #718096; font-size: 14px;">Location:</span>
          <span class="detail-value" style="text-align: right; font-weight: 600; color: #2d3748; font-size: 14px;">{{location}}</span>
        </div>
        {{/if}}
        
        {{#if bookingId}}
        <div class="detail-row" style="display: flex; justify-content: space-between; align-items: center; padding: 12px 0; border-bottom: none; padding-bottom: 0;">
          <span class="detail-label" style="font-weight: 500; color: #718096; font-size: 14px;">Booking ID:</span>
          <span class="detail-value" style="text-align: right; font-weight: 600; color: #2d3748; font-size: 14px;">{{bookingId}}</span>
        </div>
        {{/if}}
      </div>
      
      {{#if providerName}}
      <div class="provider-section" style="background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%); border-left: 3px solid #3b82f6; border-radius: 8px; padding: 15px; margin: 20px 0; color: #4a5568; line-height: 1.6;">
        <h4 class="provider-title" style="font-size: 16px; font-weight: 600; color: #000000; margin-bottom: 10px;">Service Provider</h4>
        <p><strong>{{providerName}}</strong></p>
        {{#if providerContact}}
        <p>Contact: {{providerContact}}</p>
        {{/if}}
      </div>
      {{/if}}
      
      {{#if notes}}
      <div class="notes-section" style="background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%); border-left: 3px solid #f59e0b; border-radius: 8px; padding: 15px; margin: 20px 0; color: #4a5568; line-height: 1.6;">
        <h4 class="notes-title" style="font-size: 16px; font-weight: 600; color: #000000; margin-bottom: 10px;">Additional Notes</h4>
        <p>{{notes}}</p>
      </div>
      {{/if}}
      
      <div class="button-container" style="text-align: center; margin: 25px 0;">
        <div class="button-group" style="display: flex; gap: 15px; justify-content: center; flex-wrap: wrap;">
          {{#if confirmUrl}}
          <a href="{{confirmUrl}}" class="button button-primary" style="display: inline-block; padding: 12px 24px; text-decoration: none; border-radius: 8px; font-weight: 600; font-size: 14px; min-width: 120px; text-align: center; background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); color: #ffffff; box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);">Confirm</a>
          {{/if}}
          {{#if rescheduleUrl}}
          <a href="{{rescheduleUrl}}" class="button button-secondary" style="display: inline-block; padding: 12px 24px; text-decoration: none; border-radius: 8px; font-weight: 600; font-size: 14px; min-width: 120px; text-align: center; background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: #ffffff; box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);">Reschedule</a>
          {{/if}}
          {{#if cancelUrl}}
          <a href="{{cancelUrl}}" class="button button-cancel" style="display: inline-block; padding: 12px 24px; text-decoration: none; border-radius: 8px; font-weight: 600; font-size: 14px; min-width: 120px; text-align: center; background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%); color: #ffffff; box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);">Cancel</a>
          {{/if}}
        </div>
      </div>
      
      <p style="margin-top: 20px; color: #4a5568; line-height: 1.6;">
        Please arrive 5-10 minutes early for your appointment. If you need to make any changes, please contact us as soon as possible.
      </p>
    </div>
    
    <div class="footer" style="text-align: center; padding: 20px 0 0 0; font-size: 12px; color: #718096; border-top: 1px solid #eee; margin-top: 25px;">
      <p>
        &copy; {{year}} {{appName}}. All rights reserved.<br>
        This is an automated message from {{#if appName}}{{appName}}{{else}}MyProfile{{/if}}. Please do not reply to this email.<br>
        If you need assistance, please contact our support team.
      </p>
    </div>
  </div>
</body>
</html> 